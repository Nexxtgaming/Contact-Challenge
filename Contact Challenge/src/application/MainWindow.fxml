<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainBorderPane" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MainWindowController">
   <top>
      <VBox prefHeight="0.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="Contacts">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Close" />
                        <MenuItem fx:id="addContact" mnemonicParsing="false" text="Add" />
                        <MenuItem fx:id="editContact" mnemonicParsing="false" text="Edit" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </children>
      </VBox>
   </top>
   <center>
      <TableView prefHeight="300.0" prefWidth="800.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="firstNameColumn" minWidth="75.0" prefWidth="200.0" text="First Name" />
          <TableColumn fx:id="lastNameColumn" minWidth="75.0" prefWidth="200.0" text="Last Name" />
            <TableColumn fx:id="phoneNumberColumn" minWidth="75.0" prefWidth="200.0" text="Phone Number" />
            <TableColumn fx:id="notesColumn" minWidth="75.0" prefWidth="200.0" text="Notes" />
        </columns>
      </TableView>
   </center>
  
</BorderPane>
